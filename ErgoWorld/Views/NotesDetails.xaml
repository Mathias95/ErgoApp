<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ErgoWorld.Views.NotesDetails">
    <ContentView.Content>
                <Frame BackgroundColor="#f9f9f9">
            <Label Text="{Binding Heading}"
                   FontSize="Large"/>
            <Label Text="{Binding Date}"
                   FontSize="Medium"/>
            <Editor BackgroundColor="#f9f9f9" 
                    AutoSize="TextChanges"
                    Text="{Binding Text}"/>
        </Frame>
    </ContentView.Content>
</ContentView>
