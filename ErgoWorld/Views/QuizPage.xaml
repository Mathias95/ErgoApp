<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ErgoWorld.Views.QuizPage">
    <ContentPage.Content>
        <Grid Padding="40" RowSpacing="0" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label Text="Quiz" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2" 
                   Grid.Row="0" 
                   HorizontalOptions="Start" 
                   VerticalOptions="Center" 
                   TextColor="#5495F8" 
                   FontSize="40" 
                   FontAttributes="Bold" 
                   Margin="0, 30" />

            <StackLayout Grid.Column="0" 
                         Grid.ColumnSpan="2" 
                         Grid.Row="1">
                <Grid ColumnSpacing="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Frame Grid.Column="0"
                           BackgroundColor="Red"
                           HasShadow="false"
                           Margin="0, 0, 0, 0"
                           Padding="0"
                           CornerRadius="18"
                           IsClippedToBounds="True"
                           >
                        <Image Source="lessonimg.jpg"/>
                    </Frame>

                    <Frame Grid.Column="1" 
                           BackgroundColor="#F9F9F9" 
                           HasShadow="false" 
                           Margin="25, 0, 0, 0" 
                           Padding="30" 
                           CornerRadius="18">
                        <StackLayout>
                            <Label Text="Hvordan forsøger kroppen at kompensere for et dårligt fungerende hjerte?"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   Margin="0, 0, 0, 10"
                                   TextColor="#464646"
                                   VerticalOptions="Center"/>

                            <ListView x:Name="QuizList"
                                      BackgroundColor="Transparent"
                                      SeparatorVisibility="None"
                                      SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Grid ColumnSpacing="20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Label Text="{Binding Answer}" 
                                                       Grid.Column="0"
                                                       FontSize="13"
                                                       TextColor="#464646"
                                                       HorizontalOptions="Start"
                                                       VerticalOptions="Center"/>
                                                <Switch IsToggled="{Binding Selected}"
                                                        OnColor="#5495F8"
                                                        Grid.Column="1"
                                                        VerticalOptions="Center"/>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>
                    </Frame>
                </Grid>
            </StackLayout>

            <Frame Grid.Row="2" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2" 
                   HasShadow="false" 
                   Margin="0">
                <Grid Margin="0" Padding="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FlexLayout JustifyContent="Center" 
                                AlignItems="Center" 
                                Grid.Column="1" 
                                Grid.Row="1">
                        <Image Source="SliderSelected.png" Margin="9" />
                        <Image Source="SliderSelected.png" Margin="9" />
                        <Image Source="SliderSelected.png" Margin="9" />
                    </FlexLayout>

                    <Button></Button>
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
